Source: "Neohabitat\VIC20\*"; DestDir: "{app}\VIC20"; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

; This section is necessary to create the fliplist and provide the full filepath to the Habitat B disk instead of hard coding it
; It also writes to the vice.ini file to provide a full filepath to the Habitat fliplist
[Code]
procedure WriteToFile;
var app : string;
begin
  app := ExpandConstant('{app}');
  SaveStringToFile(ExpandConstant('{app}\habitat.vfl'), '; Vice fliplist file' + #13#10, True);
  SaveStringToFile(ExpandConstant('{app}\habitat.vfl'), #13#10, True);
  SaveStringToFile(ExpandConstant('{app}\habitat.vfl'), 'UNIT 8' + #13#10, True);
  SaveStringToFile(ExpandConstant('{app}\habitat.vfl'), app, True);
  SaveStringToFile(ExpandConstant('{app}\habitat.vfl'), '\Habitat-B.d64', True);
end;

procedure WriteToIni;
var app : string;
begin
  app := ExpandConstant('{app}');
  SaveStringToFile(ExpandConstant('{app}\vice.ini'), 'FliplistName="', True);
  SaveStringToFile(ExpandConstant('{app}\vice.ini'), app, True);
  SaveStringToFile(ExpandConstant('{app}\vice.ini'), '\habitat.vfl"', True);

end;

[Run]
Filename: "{app}\NeoHabitatControls.pdf"; Description: "View NeoHabitat controls PDF"; Flags: postinstall shellexec nowait skipifsilent unchecked
Filename: "{app}\bin\{#MyAppExeName}"; Description: "Launch NeoHabitat"; Parameters: "-autostart ""{app}/Habitat-Boot.d64"" -flipname ""{app}/habitat.vfl"""; Flags: postinstall nowait skipifsilent unchecked

