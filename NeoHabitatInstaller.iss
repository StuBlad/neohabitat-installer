Source: "Neohabitat\README"; DestDir: "{app}"; Flags: ignoreversion
Source: "Neohabitat\vice.ini"; DestDir: "{app}"; AfterInstall: WriteToIni; Flags: ignoreversion
Source: "Neohabitat\bin\*"; DestDir: "{app}\bin"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "Neohabitat\C64\*"; DestDir: "{app}\C64"; Flags: ignoreversion recursesubdirs createallsubdirs
